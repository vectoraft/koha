                                "includes" => { value => "106", label => "Include Files" }
                            }
                        ) %]
                        
                        [% shadcn_card(
                            variant = "glass",
                            class = "stat-card",
                            body = BLOCK
                        ) %]
                            <span class="stat-value">3</span>
                            <span class="stat-label">Integration Helpers</span>
                        [% END %]
                        
                        [% shadcn_card(
                            variant = "glass",
                            class = "stat-card",
                            body = BLOCK
                        ) %]
